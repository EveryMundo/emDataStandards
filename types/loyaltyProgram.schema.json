{
  "id": "/loyaltyProgram",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "LoyaltyProgram",
  "description": "LoyaltyProgram",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of program",
      "type": "string",
      "example": "Miles and Bonus"
    },
    "provider": {
      "description": "Name of the organization providing the Loyalty Program.",
      "type": "object",
      "properties": {
        "name": {
          "description": "name",
          "type": "string"
        }
      },
      "example": {
        "@type": "Organization",
        "name": "Aegean Airlines"
      }
    },
    "url": {
      "description": "Loyalty Program information URL.",
      "type": "string",
      "example": "https://www.britishairways.com/en-gb/executive-club/about-the-club"
    },
    "certificateNumber": {
      "description": "The loyalty redemption certificate number.",
      "type": "string",
      "example": "12854712"
    },
    "membershipLevel": {
      "description": "Loyalty Program Membership Level",
      "type": "string",
      "example": "Gold"
    },
    "redemption": {
      "description": "Loyalty Program currency payment method.",
      "type": "object",
      "properties": {
        "unit": {
          "description": "unit",
          "type": "string"
        },
        "amount": {
          "description": "amount",
          "type": "number"
        },
        "conversion": {
          "description": "conversion",
          "type": "object",
          "properties": {
            "amount": {
              "description": "amount",
              "type": "number"
            },
            "ratio": {
              "description": "ratio",
              "type": "number"
            }
          }
        }
      },
      "example": {
        "@type": "Redemption",
        "unit": "miles",
        "amount": 1500,
        "conversion": {
          "amount": 1500,
          "ratio": 0.5
        }
      }
    },
    "milesEarned": {
      "description": "Total earned miles",
      "type": "number",
      "example": 1000
    },
    "isLoggedIn": {
      "description": "Whether the user is logged in as Loyalty user or not in an airTRFX page",
      "type": "boolean",
      "example": false
    }
  },
  "required": [],
  "links": [
    {
      "title": "LoyaltyProgram",
      "description": "LoyaltyProgram",
      "rel": "self",
      "href": "/loyaltyProgram",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}