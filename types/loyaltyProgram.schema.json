{
  "id": "/loyaltyProgram",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "LoyaltyProgram",
  "description": "LoyaltyProgram",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of program",
      "type": "string",
      "example": "Miles and Bonus"
    },
    "provider": {
      "description": "Name of the organization providing the Loyalty Program.",
      "type": "object",
      "properties": {
        "name": {
          "description": "name",
          "type": "string",
          "example": "Aegean Airlines"
        }
      }
    },
    "url": {
      "description": "Loyalty Program information URL.",
      "type": "string",
      "example": "https://www.britishairways.com/en-gb/executive-club/about-the-club"
    },
    "certificateNumber": {
      "description": "The loyalty redemption certificate number.",
      "type": "string",
      "example": "12854712"
    },
    "membershipLevel": {
      "description": "Loyalty Program Membership Level",
      "type": "string",
      "example": "Gold"
    },
    "redemption": {
      "$ref": "./redemption_base.schema.json"
    },
    "milesEarned": {
      "description": "Total earned miles",
      "type": "number",
      "example": 1000
    },
    "isLoggedIn": {
      "description": "Whether the user is logged in as Loyalty user or not in an airTRFX page",
      "type": "boolean",
      "example": false
    },
    "lastSearchedRoutes": {
      "description": "Routes that have been recently searched",
      "type": "array",
      "example": [
        "MIA>LAX","LGA>FLL"
      ]
    },
    "homeAirportIataCode": {
      "description": "The most frequent departure airport for a user. This is usually set in the loyalty account.",
      "type": "string",
      "example": "MIA"
    },
    "savedRoutes": {
      "description": "Routes that the user has saved",
      "type": "array",
      "example": [
        "MIA>LAX","LGA>FLL"
      ]
    },
    "preferredFareClass": {
      "description": "Preferred Fare Class",
      "type": "string",
      "example": "BUSINESS"
    },
    "preferredJourneyType": {
      "description": "Preferred Journey Type",
      "type": "string",
      "example": "ONE_WAY"
    }
  },
  "required": ["name", "provider", "membershipLevel", "milesEarned"],
  "links": [
    {
      "title": "LoyaltyProgram",
      "description": "LoyaltyProgram",
      "rel": "self",
      "href": "/loyaltyProgram",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}