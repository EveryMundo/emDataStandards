{
  "id": "/airindex",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "airIndex",
  "description": "airIndex™ is EveryMundo’s proprietary KPI (numeric value between 0 and 1)",
  "type": "object",
  "properties": {
    "_id": {
      "description": "Record unique identifier as given by MongoDB",
      "type": "string",
      "example": "14961881240552180.141840260"
    },
     "airlineCode": {
            "description": "iataCode",
            "type": "string",
            "example": "EM"
          },
    "origin": {
      "description": "Origin",
      "type": "string",
      "example": "ACA"
    },
    "destination": {
      "description": "Destination",
      "type": "string",
      "example": "AGU"
    },
    "airIndex": {
      "description": "Numeric value between 0 and 1 that is obtained by combining two key factors: route search volume and price change behavior by route",
      "type": "number",
      "example": 0.5
    },
     "airLabel": {
      "description": "Label with suggestion to pull/push a route",
      "type": "string",
      "example": "no_change"
    },
     "airIndex_s": {
      "description": "Shorter version of air_index",
      "type": "number",
      "example": 0.5
    },
     "searches_l": {
      "description": "Average searches in last 30 days",
      "type": "integer",
      "example": 387
    },
     "medianPrice_l": {
      "description": "Median price in last 30 days",
      "type": "number",
      "example": 150.96
    },
     "searches_s": {
      "description": "Average searches in last 24 hours",
      "type": "integer",
      "example": 17
    },
     "medianPrice_s": {
      "description": "Medium price in last 24 hours",
      "type": "number",
      "example": 153.43
    },
     "searchRate_l": {
      "description": "daily search rate in the last 30 days",
      "type": "number",
      "example": 12.9
    },
     "priceIndex": {
      "description": "Price Index",
      "type": "number",
      "example": 0.73
    },
     "subset": {
      "description": "Define whether a specific row comes from subsets of original dataset",
      "type": "boolean",
      "example": "true"
    },
     "searchIndex": {
      "description": "Searches Index",
      "type": "number",
      "example": 0.62
    },
     "batchId": {
      "description": "Unique batch identifier",
      "type": "string",
      "example": "1705201000_1704201000_1706251255_ALL"
    },
     "departureDate": {
      "description": "Departure Date",
      "type": "string",
      "example": "2017-04-20 10:00:00"
    },
     "arrivalDate": {
      "description": "Arrival Date",
      "type": "string",
      "example": "2017-05-20 10:00:00"
    },
     "xid": {
      "description": "Id to identify a single unique row in a batch with the purpose of deduplication",
      "type": "string",
      "example": "1705201000_1704201000_1706251255_xx:ACA>AGU"
    },
     "__createdat": {
      "description": "Record creation date",
      "type": "string",
      "example": "2017-06-25 13:00:17"
    }
  },
  "required": ["name", "iataCode"],
  "links": [
    {
      "title": "Airline",
      "description": "Airline",
      "rel": "self",
      "href": "/airindex",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}
