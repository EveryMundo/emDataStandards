{
  "id": "/product",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Product",
  "description": "Product",
  "type": "object",
  "properties": {
    "name": {
      "description": "Product name",
      "type": "string",
      "example": "airTRFX"
    },
    "category": {
      "description": "For Flights, this is populated with the journeyType",
      "type": "string",
      "example": "ONE_WAY"
    },
    "type": {
      "description": "For Flights, this is populated with the fareClass",
      "type": "string",
      "example": "BUSINESS"
    },
    "version": {
      "description": "Product version",
      "type": "string",
      "example": "2.0"
    }
  },
  "required": ["id"],
  "links": [
    {
      "title": "Product",
      "description": "Product",
      "rel": "self",
      "href": "/product",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}