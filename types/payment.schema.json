{
  "id": "/payment",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Payment",
  "description": "Payment",
  "type": "object",
  "properties": {
    "methodInput": {
      "description": "Method of payment",
      "type": "string",
      "example": "CreditCard"
    },
    "method": {
      "description": "methodInput mapped to either 'CREDIT_CARD', 'DEBIT_CARD', 'EBPP', 'PAYPAL'. For miles, bitcoin, points or voucher see redemptionUnit.",
      "type": "string",
      "example": "CREDIT_CARD"
    },
    "cardName": {
      "description": "Name of credit card",
      "type": "string",
      "example": "Amex"
    },
    "isSaved": {
      "description": "Whether the card was saved",
      "type": "boolean",
      "example": true
    }
  },
  "required": ["method"],
  "links": [
    {
      "title": "Payment",
      "description": "Payment",
      "rel": "self",
      "href": "/payment",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}