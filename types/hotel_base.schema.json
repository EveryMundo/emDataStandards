{
    "id": "/hotel_base",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Hotel Base",
    "description": "Hotel Base Schema",
    "type": "object",
    "properties": {
        "tenantCode": {
            "description": "Tenant Code",
            "type": "string",
            "example": "XXX"
        },
        "hotelId": {
            "description": "Hotel identifier",
            "type": "string",
            "example": "Hotel123456789Kat"
        },
        "roomCode": {
            "description": "Room code",
            "type": "string",
            "example": "XLV"
        },
        "rateCode": {
            "description": "Room rate code",
            "type": "string",
            "example": "XXX"
        },
        "group": {
            "description": "Hotel group where hotels are under the same management and belong to the same brand of hotels.",
            "type": "string",
            "example": "IHG"
        },
        "subGroup": {
            "description": "Hotel subGroup where hotels are under the same management and belong to the same brand of hotels.",
            "type": "string",
            "example": "ABC"
        },
        "priceSpecification": {
            "allOf": [
                {
                    "$ref": "./priceSpecification_base.schema.json"
                },
                {
                    "properties": {
                        "currencyCode": {
                            "description": "The currency (in 3-letter ISO 4217 format) of the price.",
                            "type": "string",
                            "example": "USD"
                        }
                    }
                }
            ]
        },
        "guest": {
            "$ref": "./guest.schema.json"
        },
        "checkinDate": {
            "description": "Check in date",
            "type": "string",
            "example": "2017-08-05"
        },
        "checkoutDate": {
            "description": "Check out date",
            "type": "string",
            "example": "2017-08-06"
        },
        "nightCount": {
            "description": "Number of nights the guest is staying at the hotel",
            "type": "number",
            "example": 4
        },
        "roomCount": {
            "description": "Number of rooms",
            "type": "number",
            "example": 1
        },
        "sourceId": {
            "description": "ID used for debugging",
            "type": "string",
            "example": "XADPLIK7890"
        }
    },
    "required": [
        "hotelId",
        "roomCode",
        "rateCode",
        "totalPrice",
        "guest.count",
        "checkinDate",
        "checkoutDate"
    ],
    "links": [
        {
            "title": "Hotel Base",
            "description": "Hotel Base Schema",
            "rel": "self",
            "href": "/hotel_base",
            "method": "GET",
            "targetSchema": {
                "rel": "self"
            }
        }
    ]
}
