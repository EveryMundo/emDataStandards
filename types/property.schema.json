{
  "id": "/property",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Property",
  "description": "Property",
  "type": "object",
  "properties": {
    "tenantCode": {
      "description": "Tenant Code",
      "type": "string",
      "example": "XXX"
    },
    "propertyId": {
      "description": "Property identifier",
      "type": "string",
      "example": "Hotel123456789Kat"
    },
    "roomCode": {
      "description": "Room code",
      "type": "string",
      "example": "XLV"
    },
    "rateCode": {
      "description": "Room rate code",
      "type": "string",
      "example": "XXX"
    },
    "name": {
      "description": "Property name",
      "type": "string",
      "example": "Holiday Inn"
    },
    "group": {
      "description": "Hotel group where hotels are under the same management and belong to the same brand of hotels.",
      "type": "string",
      "example": "IHG"
    },
    "subGroup": {
      "description": "Hotel subGroup where hotels are under the same management and belong to the same brand of hotels.",
      "type": "string",
      "example": "ABC"
    },
    "cityCode": {
      "description": "ISO code for the city",
      "type": "string",
      "example": "SAN"
    },
    "priceSpecification": {
      "allOf": [
        {
          "$ref": "./priceSpecification_base.schema.json"
        },
        {
          "properties": {
            "priceOffers": {
              "description": "Description and identifier for combined service pricing, e.g. hotel price includes flight fare (alphabetical order): HOTEL|JOURNEY, CAR|HOTEL|JOURNEY, JOURNEY, etc.",
              "type": "string",
              "example": "JOURNEY"
            },
            "currencyCode": {
              "description": "The currency (in 3-letter ISO 4217 format) of the price.",
              "type": "string",
              "example": "USD"
            }
          }
        }
      ]
    },
    "guest": {
      "$ref": "./guest.schema.json"
    },
    "address": {
      "$ref": "./address.schema.json"
    },
    "checkinDate": {
      "description": "Check in date",
      "type": "string",
      "example": "2017-08-05"
    },
    "checkoutDate": {
      "description": "Check out date",
      "type": "string",
      "example": "2017-08-06"
    },
    "checkinTime": {
      "description": "The earliest someone may check into a lodging establishment",
      "type": "string",
      "example": "16:00:00"
    },
    "checkoutTime": {
      "description": "The latest someone may check out of a lodging establishment",
      "type": "string",
      "example": "20:00:00"
    },
    "nightCount": {
      "description": "Number of nights the guest is staying at the property",
      "type": "number",
      "example": 4
    },
    "roomType": {
      "description": "Room type",
      "type": "string",
      "example": "Suite"
    },
    "roomCount": {
      "description": "Number of rooms",
      "type": "number",
      "example": 1
    },
    "siteEdition": {
      "description": "Site edition",
      "type": "string",
      "example": "en-US"
    },
    "starRating": {
      "description": "An official rating for the property, e.g. from national associations or standards bodies: 5-star hotel",
      "type": "string",
      "example": "5"
    },
    "aggregatedRating": {
      "$ref": "./aggregatedRating.schema.json"
    },
    "images": {
      "description": "Image URLs for the property",
      "type": "array",
      "example": [
        "everymundo.com/image.jpg",
        "everymundo.com/image2.jpg"
      ]
    },
    "amenities": {
      "description": "Amenities will only be collected from the Results Page",
      "type": "array",
      "example": [
        "Golf",
        "Pool"
      ]
    },
    "sourceId": {
      "description": "ID used for debugging",
      "type": "string",
      "example": "XADPLIK7890"
    }
  },
  "required": [
    "propertyId",
    "roomCode",
    "rateCode",
    "name",
    "totalPrice",
    "guest.count",
    "checkinDate",
    "checkoutDate"
  ],
  "links": [
    {
      "title": "Property",
      "description": "Property",
      "rel": "self",
      "href": "/property",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}
