{
  "id": "/hotel",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Hotel",
  "description": "Hotel",
  "type": "object",
  "properties": {
    "name": {
      "description": "Hotel name",
      "type": "string",
      "example": "Holiday Inn"
    },
    "group": {
      "description": "Hotel group where hotels are under the same management and belong to the same brand of hotels.",
      "type": "string",
      "example": "IHG"
    },
    "cityCode": {
      "description": "ISO code for the city",
      "type": "string",
      "example": "SAN"
    },
    "priceSpecification": {
      "description": "priceSpecification",
      "type": "object",
      "properties": {
        "price": {
          "description": "price",
          "type": "number"
        },
        "totalPrice": {
          "description": "totalPrice",
          "type": "number"
        },
        "taxPrice": {
          "description": "taxPrice",
          "type": "number"
        },
        "additionalFeesPrice": {
          "description": "additionalFeesPrice",
          "type": "number"
        },
        "currency": {
          "description": "currency",
          "type": "string"
        },
        "currencySymbol": {
          "description": "currencySymbol",
          "type": "string"
        },
        "priceMarketId": {
          "description": "priceMarketId",
          "type": "string"
        },
        "lastUpdatePriceTime": {
          "description": "lastUpdatePriceTime",
          "type": "string"
        }
      },
      "example": {
        "@type": "priceSpecification",
        "price": 234.21,
        "totalPrice": 250.6,
        "taxPrice": 16.39,
        "additionalFeesPrice": 12,
        "currency": "USD",
        "currencySymbol": "$",
        "priceMarketId": "USD-US",
        "lastUpdatePriceTime": "2018-02-12T16:49:13.131+0000"
      }
    },
    "guest": {
      "description": "guest",
      "type": "object",
      "properties": {
        "count": {
          "description": "count",
          "type": "number"
        },
        "adultCount": {
          "description": "adultCount",
          "type": "number"
        },
        "childCount": {
          "description": "childCount",
          "type": "number"
        }
      },
      "example": {
        "count": 4,
        "adultCount": 2,
        "childCount": 2
      }
    },
    "address": {
      "description": "Where the hotel is located",
      "type": "object",
      "properties": {
        "street": {
          "description": "street",
          "type": "string"
        },
        "cityName": {
          "description": "cityName",
          "type": "string"
        },
        "regionCode": {
          "description": "regionCode",
          "type": "string"
        },
        "postalCode": {
          "description": "postalCode",
          "type": "string"
        },
        "countryCode": {
          "description": "countryCode",
          "type": "string"
        }
      },
      "example": {
        "@type": "PostalAddress",
        "street": "1500 Orange Avenue",
        "cityName": "San Diego",
        "regionCode": "CA",
        "postalCode": "94043",
        "countryCode": "US"
      }
    },
    "checkinTime": {
      "description": "The earliest someone may check into a lodging establishment",
      "type": "string",
      "example": "2017-08-05T16:00:00-07:00"
    },
    "checkoutTime": {
      "description": "The latest someone may check out of a lodging establishment",
      "type": "string",
      "example": "2017-08-06T20:00:00-07:00"
    },
    "roomCount": {
      "description": "Number of rooms",
      "type": "number",
      "example": 1
    },
    "starRating": {
      "description": "An official rating for the hotel, e.g. from national associations or standards bodies: 5-star hotel",
      "type": "string",
      "example": "5"
    },
    "aggregateRating": {
      "description": "Rating of hotel",
      "type": "object",
      "properties": {
        "author": {
          "description": "author",
          "type": "string"
        },
        "bestRating": {
          "description": "bestRating",
          "type": "number"
        },
        "ratingValue": {
          "description": "ratingValue",
          "type": "number"
        },
        "worstRating": {
          "description": "worstRating",
          "type": "number"
        },
        "ratingCount": {
          "description": "ratingCount",
          "type": "number"
        }
      },
      "example": {
        "@type": "Rating",
        "author": "Tripadvisor",
        "bestRating": 5,
        "ratingValue": 3,
        "worstRating": 1,
        "ratingCount": 11
      }
    },
    "image": {
      "description": "Image URL for the hotel",
      "type": "string",
      "example": "everymundo.com/image.jpg"
    },
    "images": {
      "description": "Image URLs for the hotel",
      "type": "array",
      "example": [
        "everymundo.com/image.jpg",
        "everymundo.com/image2.jpg"
      ]
    }
  },
  "required": ["name", "cityCode"],
  "links": [
    {
      "title": "Hotel",
      "description": "Hotel",
      "rel": "self",
      "href": "/hotel",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}