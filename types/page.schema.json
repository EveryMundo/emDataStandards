{
  "id": "/page",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Page",
  "description": "WebPage",
  "type": "object",
  "allOf": [
    {"$ref": "./page_base.schema.json"},
  {
  "properties": {
    "author": {
      "description": "The author of this content",
      "type": "string",
      "example": "EveryMundo"
    },
    "publisher": {
      "description": "The publisher of the creative work",
      "type": "string",
      "example": "Emirates Airlines"
    },
    "fullURL": {
      "description": "Full url in lowercase (wit query parameters)",
      "type": "string",
      "example": "https://flights.everymundo.com/en/flights-from-miami-to-berlin&utm_source=google"
    },
    "typeName": {
      "description": "Template name: HOMEPAGE, CITY_TO_CITY, FROM_CITY, TO_CITY, CITY_TO_COUNTRY, COUNTRY_TO_CITY, COUNTRY_TO_COUNTRY, FROM_COUNTRY, TO_COUNTRY, EXTERNALIZED, CUSTOM_PAGE, 404_PAGE, SITEMAP, BUS_STATION, FROM_STATE", 
      "type": "string",
      "example": "CITY_TO_CITY"
    },
    "typeCode": {
      "description": "Page Type Code: HP, CICO, FCI, TCI, CICI, COCI, COCO, FCO, TCO, EXT, CP, 404, SM, BS, FS",
      "type": "string",
      "example": "CICI"
    },
    "previousPageName": {
      "description": "Page name of previous page",
      "type": "string",
      "example": "flights from miami"
    },
    "previousPageURL": {
      "description": "Full url in lowercase (without query parameters to avoid collecting personal data by mistake) of previous Page",
      "type": "string",
      "example": "https://flights.everymundo.com/en/flights-from-miami"
    },
    "previousPageLinkName": {
      "description": "Link name that was clicked to arrive on the page",
      "type": "string",
      "example": "Flight Destinations"
    },
    "breadcrumb": {
      "description": "A set of links that can help a user understand and navigate a website hierarchy.",
      "type": "string",
      "example": "Home | Flights | To Miami (MFL)"
    },
    "countryIsoCode": {
      "description": "The country code (in 2 letter codes from ISO 3166-1)",
      "type": "string",
      "example": "US"
    },
    "dateCreated": {
      "description": "The date on which the CreativeWork was created",
      "type": "string",
      "example": "2017-01-12"
    },
    "webDesign": {
      "description": "RESPONSIVE, FIXED, FLUID, ADAPTIVE",
      "type": "string",
      "example": "RESPONSIVE"
    },
    "accessibility": {
      "description": "Capture 'true' if page is accessible and 'false' if it is not",
      "type": "boolean",
      "example": true
    },
    "urlParameters": {
      "description": "Short URL Parameters",
      "type": "object",
      "properties": {
        "em_aic": {
          "description": "Airline Iata Code",
          "type": "string",
          "example": "em_aic=AA"
        },
        "em_b": {
          "description": "Maximum Budget",
          "type": "string",
          "example": "em_b=300"
        },
        "em_c": {
          "description": "Currency Code",
          "type": "string",
          "example": "em_c=GBP"
        },
        "em_d": {
          "description": "Destination Airport IATA Code",
          "type": "string",
          "example": "em_d=NYC"
        },
        "em_dc": {
          "description": "Discount Code",
          "type": "string",
          "example": "em_dc=ATH12345"
        },
        "em_dct": {
          "description": "Device Category: DESKTOP, TABLET, MOBILE",
          "type": "string",
          "example": "em_dct=MOBILE"
        },
        "em_dd": {
          "description": "Departure Date YYYY-MM-DD",
          "type": "string",
          "example": "em_dd=2019-03-26"
        },
        "em_dse": {
          "description": "Deeplink site edition",
          "type": "string",
          "example": "em_dse=en-HK"
        },
        "em_dt": {
          "description": "{Outbound date},{Inbound date}, e.g. 20180412,20180420",
          "type": "string",
          "example": "em_dt=20180505,20180606"
        },
        "em_fai": {
          "description": "Fare Alert Id consisting of {airlineIataCode}{origin_airport}{destination_airport}{currencyCode}{price}_{random 8 number id}",
          "type": "string",
          "example": "em_fai=A3ATHSKGEUR41_12345678 "
        },
        "em_fc": {
          "description": "Fare Class should be EC (Economy), FC (First Class), BC (Business Class). In tracking the full fare class name is used (ECONOMY, BUSINESS, FIRST_CLASS)",
          "type": "string",
          "example": "em_fc=EC"
        },
        "em_fd": {
          "description": "Flexible Dates should be t (true) or f (false)",
          "type": "string",
          "example": "em_fd=f"
        },
        "em_fw": {
          "description": "FareWire Tracking Parameter consisting of {airlineIataCode}{origin_airport}{destination_airport}{currencyCode}{price}{Endpoint name or id}_{random 8 number id}",
          "type": "string",
          "example": "em_fw=A3ATHSKGEUR41Facebook_12345678 "
        },
        "em_jt": {
          "description": "Journey Type should be ROUND_TRIP = RT, ONE_WAY = OW, MULTI_CITY=MC",
          "type": "string",
          "example": "em_jt=OW"
        },
        "em_l": {
          "description": "Action label giving more details to event action. Used in the tracking library.",
          "type": "string",
          "example": "em_l=view-deal"
        },
        "em_m": {
          "description": "Miles",
          "type": "string",
          "example": "em_m=true"
        },
        "em_o": {
          "description": "Origin Airport IATA Code",
          "type": "string",
          "example": "em_o=MIA"
        },
        "em_p": {
          "description": "Provider. Airline name without space.",
          "type": "string",
          "example": "em_p=AmericanAirlines"
        },
        "em_pc": {
          "description": "Passenger Count",
          "type": "string",
          "example": "em_pc=1"
        },
        "em_ptc": {
          "description": "Page Type Code",
          "type": "string",
          "example": "em_pc=CICI"
        },
        "em_r": {
          "description": "Route",
          "type": "string",
          "example": "em_r=SFO>JFK"
        },
        "em_ra": {
          "description": "Redemption Amount",
          "type": "string",
          "example": "em_ra=39937"
        },
        "em_rd": {
          "description": "Return Date YYYY-MM-DD",
          "type": "string",
          "example": "em_rd=2019-03-26"
        },
        "em_ta": {
          "description": "Tax Amount",
          "type": "string",
          "example": "em_ta=50"
        },
        "em_tp": {
          "description": "Total Price",
          "type": "string",
          "example": "em_tp=399.37"
        },
        "em_tpu": {
          "description": "The total price for the reservation or ticket in USD, including applicable taxes, shipping, etc. Two decimals only.",
          "type": "string",
          "example": "em_tpu=530.62"
        },
        "em_ttu": {
          "description": "Total Tax in USD",
          "type": "string",
          "example": "em_ttu=40"
        },
        "em_se": {
          "description": "Site Edition",
          "type": "string",
          "example": "em_se=en-HK"
        }
      }
    }
  }}],
  "required": ["name", "url", "hostname", "languageIsoCode", "siteEdition"],
  "links": [
    {
      "title": "Page",
      "description": "Page",
      "rel": "self",
      "href": "/page",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}
