{
  "id": "/offer",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Offer",
  "description": "Offer",
  "type": "object",
  "properties": {
    "offerId": {
      "description": "When multiple offer items are sent to FareNet each in their own file, use offer Id as an identifier that they belong to the same offer.",
      "type": "string",
      "example": "123456789Kat"
    },
    "priceSpecification": {
      "allOf": [
        {"$ref": "./priceSpecification_base.schema.json"},
      {
        "properties": {
          "description": {
            "description": "Description and identifier for combined service pricing, e.g. hotel price includes flight fare (alphabetical order): HOTEL|JOURNEY, CAR|HOTEL|JOURNEY, JOURNEY, etc.",
            "type": "string",
            "example": "HOTEL|JOURNEY"
          }
        }
      }]
    },
    "journey": {
      "$ref": "./journey.schema.json"
    },
    "hotels": {
      "$ref": "./hotel.schema.json"
    },
    "page": {
      "$ref": "./page.schema.json"
    },
    "device": {
      "$ref": "./device.schema.json"
    },
    "metadata": {
      "$ref": "./metadata.schema.json"
    }
  },
  "required": ["offerId", "journey", "page", "device", "metadata"],
  "links": [
    {
      "title": "Offer",
      "description": "Offer",
      "rel": "self",
      "href": "/offer",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}