{
  "id": "/offer",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Offer",
  "description": "Offer",
  "type": "object",
  "properties": {
    "pnr": {
      "description": "Unique Passenger Name Record that is provided by the reservations system when a booking is completed",
      "type": "string",
      "example": "7WR8PK"
    },
    "payment": {
      "description": "Payment. In the future, this object can hold other data points like the card name and if thepayment method was saved",
      "type": "object",
      "properties": {
        "methodInput": {
          "description": "Method of payment",
          "type": "string",
          "example": "CreditCard"
        },
        "method": {
          "description": "methodnput mapped to either 'CREDIT_CARD', 'DEBIT_CARD', 'EBPP', 'PAYPAL'. For miles, bitcoin, ponts or voucher see redemptionUnt.",
          "type": "string",
          "example": "CREDIT_CARD"
        }
      }
    },
    "priceSpecification": {
      "description": "Price Specification",
      "type": "object",
      "properties": {
        "currencyCode": {
          "description": "The currency (in 3-letter ISO 4217 format) of the price.",
          "type": "string",
          "example": "USD"
        },
        "currencySymbol": {
          "description": "Currency symbol",
          "type": "string",
          "example": "$"
        }
      }
    },
    "journey": {
      "allOf": [
        {"$ref": "./journey_base.schema.json"}
      ]
    },
    "hotels": {
      "allOf": [
        {"$ref": "./hotel.schema.json"}
      ]
    },
    "carRentals": {
      "allOf": [
        {"$ref": "./carRental_base.schema.json"}
      ]
    },
    "page": {
      "allOf": [
        {"$ref": "./page_base.schema.json"}
      ]    
    },
    "device": {
      "allOf": [
        {"$ref": "./device_base.schema.json"}
      ]    
    },
    "metadata": {
      "allOf": [
        {"$ref": "./metadata_base.schema.json"}
      ]  
    }
  },
  "required": ["offerId", "journey", "page", "device", "metadata"],
  "links": [
    {
      "title": "Offer",
      "description": "Offer",
      "rel": "self",
      "href": "/offer",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}