{
  "id": "/rating",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Rating",
  "description": "Rating",
  "type": "object",
  "properties": {
    "author": {
      "description": "The author of this content or rating",
      "type": "string",
      "example": "Tripadvisor"
    },
    "best": {
      "description": "The highest value allowed in this rating system. If best is omitted, 5 is assumed.",
      "type": "number",
      "example": 5
    },
    "value": {
      "description": "The rating for the content",
      "type": "number",
      "example": 3
    },
    "worst": {
      "description": "The lowest value allowed in this rating system. If worst is omitted, 1 is assumed.",
      "type": "number",
      "example": 1
    },
    "count": {
      "description": "Number of distinct ratings received",
      "type": "number",
      "example": 11
    }
  },
  "required": ["author", "value"],
  "links": [
    {
      "title": "Rating",
      "description": "Rating",
      "rel": "self",
      "href": "/rating",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}