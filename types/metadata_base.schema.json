{
    "id": "/metadata_base",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Metadata",
    "description": "Metadata",
    "type": "object",
    "properties": {
      "app": {
        "description": "App",
        "type": "object",
        "properties": {
            "name": {
                "description": "Farenet | GoogleITA UA Client",
                "type":"string",
                "example": "Farenet | GoogleITA UA Client"
            },
            "version": {
                "description": "Version of the program that generated the record",
                "type":"string",
                "example": "2.1.0"
            },
            "datasource": {
                "description": "IBE_FLIGHT_SELECTION, IBE_CONFIRMATION, IBE_PASSENGER_INFO, IBE_CHECK, IBE_EXTRAS, IBE_SEATS_SELECTION, IBE_PAYMENT",
                "type":"string",
                "example": "IBE_FLIGHT_SELECTION"   
            }
        }
      },
      "trackingId": {
        "description": "Same as emtid. This parameter is supposed to be deprecated in the long-run",
        "type": "string",
        "example": "RTJFKFRA2017073120170824$0_12345678"
      },
      "emtid": {
        "description": "Same as trackingId. Unique identifier created through module interactions for event tracking",
        "type": "string",
        "example": "RTJFKFRA2017073120170824$0_12345678"
      },
      "emcid": {
        "description": "Used in product tracking to identify user interactions across modules",
        "type": "string",
        "example": "123456"
      },
      "schemaVersion": {
        "description": "Schema version of Data Standards",
        "type": "number",
        "example": "1.0.0"
      }
    },
    "required": ["app", "schemaVersion"],
    "links": [
      {
        "title": "Metadata",
        "description": "Metadata",
        "rel": "self",
        "href": "/metadata_base",
        "method": "GET",
        "targetSchema": {
          "rel": "self"
        }
      }
    ]
  }