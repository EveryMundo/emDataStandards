{
  "id": "/device",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Device",
  "description": "Device information",
  "type": "object",
  "properties": {
    "category": {
      "description": "MOBILE, TABLET, DESKTOP",
      "type": "string",
      "example": "Mobile"
    },
    "screenResolution": {
      "description": "Specifies the screen resolution.",
      "type": "string",
      "example": "360x600"
    },
    "viewportSize": {
      "description": "Small; Medium; Large",
      "type": "string",
      "example": "Small"
    },
    "mobileBranding": {
      "description": "Mobile manufacturer or branded name (e.g: Samsung, HTC, Verizon, T-Mobile, Apple)",
      "type": "string",
      "example": "Apple"
    },
    "mobileModel": {
      "description": "Mobile device model (e.g.: Nexus S, iPhone, iPad, SM-G935F)",
      "type": "string",
      "example": "iPhone"
    },
    "mobileName": {
      "description": "Mobile device brand and model (e.g. Galaxy S8, iPhone 6)",
      "type": "string",
      "example": "iPhone 6"
    },
    "operatingSystem": {
      "description": "Device operating system (e.g. Windows, Android, iOS)",
      "type": "string",
      "example": "iOS"
    },
    "operatingSystemVersion": {
      "description": "The version of the operating system",
      "type": "string",
      "example": "9"
    },
    "isMobileApp": {
      "description": "True if mobile app is being used",
      "type": "boolean",
      "example": true
    },
    "appVersion": {
      "description": "App Version",
      "type": "string",
      "example": "1.3.2"
    }
  },
  "required": ["category", "screenResolution", "operatingSystem"],
  "links": [
    {
      "title": "Device",
      "rel": "self",
      "href": "/device",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}