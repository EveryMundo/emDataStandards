{
  "id": "/priceFormat",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Price Format",
  "description": "Dynamic price insertion schema",
  "type": "object",
  "properties": {
    "currencyIsoCode": {
      "description": "Currency ISO Code",
      "type": "string",
      "example": "USD"
    },
    "useCurrencyCode": {
      "description": "Currency ISO Code",
      "type": "boolean",
      "example": "true"
    },
    "currencyInFront": {
      "description": "Boolean to determine if the currency is in front of the price",
      "type": "boolean",
      "example": true
    },
    "priceThousandSeparator": {
      "description": "priceThousandSeparator",
      "type": "string",
      "example": ","
    },
    "priceDecimalSeparator": {
      "description": "priceDecimalSeparator",
      "type": "string",
      "example": "."
    },
    "priceDecimalCount": {
      "description": "Number of decmals after the priceDecimalSeperator",
      "type": "number",
      "example": 2
    }    
  },
  "required": [],
  "links": [
    {
      "title": "Price Format",
      "description": "Price Format",
      "rel": "self",
      "href": "/priceFormat",
      "method": "GET",
      "targetSchema": {
        "rel": "self"
      }
    }
  ]
}