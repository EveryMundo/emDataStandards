      "description": "arrivalTerminal",
      "type": "string",
      "example": "E"
    },
    "arrivalTime": {
      "description": "arrivalTime",
      "type": "string",
      "example": "2027-03-04T13:35:00-08:00"
    },
    "arrivalTimeZone": {
      "description": "While arrival time is assumed to be local time, this variable specified the departure timezone. Time offsets from UTC following the iSO 8601 standard",
      "type": "string",
      "example": "UTC"
    },
    "estimatedDuration": {
      "description": "Total journey time including the combined air time and connection times.  In case of stopover, this may or may not include stopover durations. ISO 8601 format",
      "type": "string",
      "example": "PT6H30M"
    },
    "flightDistance": {
      "description": "flightDistance",
