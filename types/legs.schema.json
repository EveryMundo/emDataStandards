    "departureTime": {
      "description": "departureTime",
      "type": "string",
      "example": "2027-03-04T06:35:00-08:00"
    },
    "departureTimeZone": {
      "description": "While departure time is assumed to be local time, this variable specified the departure timezone. Time offsets from UTC following the iSO 8601 standard",
      "type": "string",
      "example": "UTC"
    },
    "arrivalAirport": {
      "description": "arrivalAirport",
      "type": "object",
